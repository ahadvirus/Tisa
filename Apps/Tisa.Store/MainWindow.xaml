<Window x:Class="Tisa.Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tisa.Store"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Margin="5" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" />
        <StackPanel Grid.Column="1" Margin="5 0 0 0" Orientation="Vertical">
            <Button Click="ListButton_OnClick" Margin="0 0 0 5" Content="Click Me" FontSize="18" />
            <Button Click="FilterButton_OnClick" Margin="0 5 0 0" Content="Click Me" FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
