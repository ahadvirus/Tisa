@model IEnumerable<Models.DataTransfers.TypeDto>
@{
    ViewData[nameof(View.Title)] = ViewLocalizer[nameof(View.Title)];

    await Html.RenderPartialAsync(partialViewName: "_PageHeader", model: new PageHeader() { Title = ViewData[index: nameof(View.Title)], HaveCreateButton = false });
}

<div class="mt-8">
    
    <!-- Activity list (smallest breakpoint only) -->
    <div>
        <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">

            <div class="mt-2 flex flex-col">


                <ul role="list"
                    class="mt-2 divide-y divide-gray-200 overflow-hidden shadow">

                    <li class="flex flex-col sm:flex-row bg-gray-50 text-gray-900">
                        <a class="sm:w-4/12 w-100 px-6 py-3 text-sm font-semibold text-right">
                            @Html.DisplayNameFor(expression: model => model.Id)
                        </a>
                        <a class="sm:w-8/12 mt-2 sm:mt-0 w-100 px-6 py-3 text-sm font-semibold text-right">
                            @Html.DisplayNameFor(expression: model => model.Display)
                        </a>

                    </li>
                    
                    @foreach (Models.DataTransfers.TypeDto item in Model)
                    {

                        <li>
                            <a href="@Html.Raw(Url.Action(action: nameof(TypesController.Edit), controller: nameof(TypesController).RemoveController(), values: new { item.Id }))" class="flex flex-col sm:flex-row text-gray-900 bg-white px-4 py-4 hover:bg-gray-50">
                                <span class="w-100 sm:w-4/12 px-6 py-3 text-lg font-semibold text-right">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </span>
                                <span class="w-100 mt-2 sm:mt-0 px-6 py-3 sm:w-8/12 text-lg font-semibold text-right">
                                    @Html.DisplayFor(modelItem => item.Display)
                                </span>
                            </a>
                        </li>
                    }

                </ul>
            </div>

        </div>
    </div>
</div>